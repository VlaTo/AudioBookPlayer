<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:core="clr-namespace:AudioBookPlayer.App.Core"
    x:Class="AudioBookPlayer.App.Views.BooksViewPage"
    core:ViewModelLocation.AutowireViewModel="True"
    xmlns:behaviors="clr-namespace:LibraProgramming.Xamarin.Interactivity.Behaviors;assembly=LibraProgramming.Xamarin.Interactivity"
    xmlns:interactivity="clr-namespace:LibraProgramming.Xamarin.Interactivity;assembly=LibraProgramming.Xamarin.Interactivity"
    xmlns:viewmodels="clr-namespace:AudioBookPlayer.App.ViewModels"
    xmlns:views="clr-namespace:AudioBookPlayer.App.Views">
    <ContentPage.Resources>
        <ResourceDictionary>
            
            <core:TimeSpanConverter x:Key="SpanConverter" />
            <core:ImageBlobConverter x:Key="BlobConverter" />

            <Style
                x:Key="NoBooksLabelStyle"
                TargetType="Label">
                <Setter
                    Property="FontSize">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="iOS" Value="14" />
                            <On Platform="Android" Value="16" />
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
                <Setter
                    Property="TextColor"
                    Value="{AppThemeBinding Dark={StaticResource DarkSecondaryTextColor}, Light={StaticResource LightSecondaryTextColor}}"
                />
            </Style>

            <Style
                x:Key="SubtitleLabelStyle"
                TargetType="Label">
                <Setter
                    Property="TextColor"
                    Value="{AppThemeBinding Dark={StaticResource DarkSecondaryTextColor}, Light={StaticResource LightSecondaryTextColor}}">
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <interactivity:Interaction.RequestTriggers>
        <interactivity:InteractionRequestTrigger
            x:DataType="viewmodels:IBooksViewModel"
            Request="{Binding Path=PlayBookRequest, Mode=OneTime}">
            <interactivity:CallMethodTriggerAction
                x:TypeArguments="viewmodels:PlayBookInteractionRequestContext"
                MethodName="OnPlayBookRequest"
            />
        </interactivity:InteractionRequestTrigger>
    </interactivity:Interaction.RequestTriggers>
    <!--
      x:DataType enables compiled bindings for better performance and compile time validation of binding expressions.
      https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/data-binding/compiled-bindings
    -->
    <ListView
        x:DataType="viewmodels:IBooksViewModel"
        ItemsSource="{Binding Path=Books, Mode=OneWay}"
        RowHeight="{OnPlatform Android='168', iOS='180'}"
        SelectionMode="None">
        <ListView.Behaviors>
            <behaviors:EventToCommandBehavior
                EventName="ItemTapped"
                Command="{Binding Path=PlayBook, Mode=OneTime}"
                EventArgsParameterPath="Item"
            />
        </ListView.Behaviors>
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="viewmodels:AudioBookViewModel">
                <ViewCell>
                    <Grid
                        RowDefinitions="Auto,Auto,Auto"
                        ColumnDefinitions="Auto,*"
                        BackgroundColor="{AppThemeBinding Light={StaticResource LightContentPageBackgroundColor}, Dark={StaticResource DarkListViewBackgroundColor}}"
                        Padding="10">
                        <Frame
                            Grid.Column="0"
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            BorderColor="Gray"
                            Padding="2"
                            Margin="0"
                            HorizontalOptions="Center">
                            <Image
                                Aspect="Fill"
                                Source="{Binding Path=ImageSource, Mode=OneTime}"
                                WidthRequest="{OnPlatform Android='108', iOS='146'}"
                                HeightRequest="{OnPlatform Android='148', iOS='176'}"
                            />
                        </Frame>
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="{Binding Path=Title, Mode=OneTime}"
                            LineBreakMode="WordWrap"
                            Style="{DynamicResource ListItemTextStyle}"
                            FontSize="16"
                            MaxLines="3"
                            Margin="8,4,4,0"
                            Padding="0"
                        />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            LineBreakMode="NoWrap"
                            Style="{StaticResource SubtitleLabelStyle}"
                            FontSize="12"
                            Margin="8,0,4,0"
                            Padding="0"
                            Text="{Binding Path=Authors, Mode=OneTime}"
                        />
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            LineBreakMode="NoWrap"
                            Style="{StaticResource SubtitleLabelStyle}"
                            FontSize="12"
                            Text="{Binding
                                    Path=Duration,
                                    Converter={StaticResource SpanConverter},
                                    ConverterParameter='1',
                                    Mode=OneTime}"
                            Margin="8,0,4,0"
                            Padding="0"
                        />
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>