<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:core="clr-namespace:AudioBookPlayer.App.Core"
    xmlns:viewmodels="clr-namespace:AudioBookPlayer.App.ViewModels"
    xmlns:res="clr-namespace:AudioBookPlayer.App.Resources"
    x:Class="AudioBookPlayer.App.Views.BookmarksPage"
    x:DataType="viewmodels:BookmarksViewModel"
    core:ViewModelLocation.AutowireViewModel="True"
    NavigationPage.HasNavigationBar="True"
    NavigationPage.HasBackButton="True"
    NavigationPage.BackButtonTitle="Bookmarks">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Order="Primary"
            Priority="0"
            Text="{Static res:AppResources.BookmarksRemoveAllAction}"
        />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <CollectionView
            ItemsSource="{Binding Path=Bookmarks, Mode=TwoWay}">
            <CollectionView.EmptyView>
                <StackLayout>
                    <Label
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        Text="Empty"
                    />
                </StackLayout>
            </CollectionView.EmptyView>

        </CollectionView>
    </ContentPage.Content>
</ContentPage>