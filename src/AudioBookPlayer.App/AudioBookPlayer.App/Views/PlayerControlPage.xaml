        <!-- Chapter selection backdrop -->
        <BoxView
            x:Name="Backdrop"
            Color="#4E000000"
            InputTransparent="False"
            IsVisible="False">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBoxViewTapGestureRecognizerTapped" />
            </BoxView.GestureRecognizers>
        </BoxView>
        <!-- Chapter selection view -->
        <Frame
            x:Name="BottomDrawer"
            CornerRadius="16"
            BackgroundColor="White"
            HeightRequest="340"
            VerticalOptions="End"
            TranslationY="340"
            Padding="0,0,0,16"
            IsVisible="False">
            <Frame.Triggers>
                <Trigger
                    TargetType="Frame"
                    Property="VisualElement.IsVisible"
                    Value="True">
                    <Trigger.EnterActions>
                        <xamanimation:BeginAnimation Animation="{StaticResource OpenDrawer1}" />
                    </Trigger.EnterActions>
                </Trigger>
            </Frame.Triggers>
            <Frame.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnFramePanGestureRecognizerPanUpdated" />
            </Frame.GestureRecognizers>
            <StackLayout>
                <BoxView
                    Margin="20,16,20,6"
                    BackgroundColor="Gray"
                    CornerRadius="2"
                    HeightRequest="3"
                    HorizontalOptions="Center"
                    WidthRequest="80"
                />
                <CollectionView
                    ItemsSource="{Binding Path=Sections, Mode=OneWay}"
                    SelectedItem="{Binding Path=SelectedChapter, Mode=TwoWay}"
                    IsGrouped="True"
                    SelectionMode="Single"
                    SelectionChanged="OnSectionsSelectionChanged">
                    <CollectionView.GroupHeaderTemplate>
                        <DataTemplate x:DataType="viewmodels:SectionViewModel">
                            <StackLayout
                                Orientation="Horizontal"
                                Padding="{OnPlatform Android='18,0,0,0', iOS=4}"
                                HeightRequest="{OnPlatform Android=36, iOS=48}">
                                <Label
                                    TextColor="{AppThemeBinding Light={StaticResource DarkSecondaryTextColor}, Dark={StaticResource LightSecondaryTextColor}}"
                                    Text="{Binding Path=Title, Mode=OneTime}"
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="StartAndExpand"
                                    HorizontalTextAlignment="Start"
                                    VerticalTextAlignment="Center"
                                    LineBreakMode="TailTruncation"
                                />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.GroupHeaderTemplate>
                    <CollectionView.ItemTemplate>
                        <DataTemplate
                            x:DataType="viewmodels:ChapterViewModel">
                            <Grid
                                HeightRequest="{OnPlatform Android=36, iOS=48}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{OnPlatform Android=28, iOS=36}" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <BoxView
                                    Grid.Column="0"
                                    x:Name="PlayIcon"
                                    CornerRadius="18"
                                    BackgroundColor="Gray"
                                    WidthRequest="28"
                                    HeightRequest="28"
                                    IsVisible="False"
                                />
                                <Label
                                    Grid.Column="1"
                                    TextColor="{AppThemeBinding Light={StaticResource DarkPrimaryTextColor}, Dark={StaticResource LightPrimaryTextColor}}"
                                    Text="{Binding Path=Title, Mode=OneTime}"
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="StartAndExpand"
                                    HorizontalTextAlignment="Start"
                                    VerticalTextAlignment="Center"
                                    LineBreakMode="TailTruncation"
                                />
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal">
                                            <VisualState.Setters>
                                                <Setter TargetName="PlayIcon" Property="VisualElement.IsVisible" Value="False" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState Name="Selected">
                                            <VisualState.Setters>
                                                <Setter TargetName="PlayIcon" Property="VisualElement.IsVisible" Value="True" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>