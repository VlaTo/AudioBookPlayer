<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation_container"
	android:orientation="vertical"
	android:background="#FF4F4037"
    android:elevation="4dp"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

	<!-- -->
	<!-- app:layout_constraintStart_toStartOf="parent" -->
	<RelativeLayout
		android:id="@+id/collapsed_drawer"
		android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp"
		android:layout_alignParentTop="true">

		<ImageButton
			android:id="@+id/play_pause_button"
			android:src="@drawable/ic_play"
			android:background="@drawable/small_play_button_background"
			android:layout_width="38dp"
			android:layout_height="38dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="8dp"
		/>

		<TextView
			android:id="@+id/collapsed_book_title"
			android:textColor="@android:color/white"
			android:textAppearance="@style/TextAppearance.AppCompat.Medium"
			android:textAlignment="textStart"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="8dp"
			android:layout_toLeftOf="@id/play_pause_button"
		/>

		<TextView
			android:id="@+id/collapsed_chapter_title"
			android:textColor="@android:color/white"
			android:textAppearance="@style/TextAppearance.AppCompat.Small"
			android:textAlignment="textStart"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="8dp"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/collapsed_book_title"
			android:layout_toLeftOf="@id/play_pause_button"
		/>

	</RelativeLayout>

	<!-- -->
	<!-- app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" -->
	<LinearLayout
	    android:id="@+id/expanded_drawer"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:visibility="invisible"
	    android:layout_alignParentTop="true">

		<Space
            android:layout_width="match_parent"
            android:layout_height="48dp"
        />

	    <TextView
		    android:id="@+id/expanded_book_title"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
		    android:textAlignment="center"
		    android:textColor="@android:color/white"
	    />

	    <TextView
		    android:id="@+id/expanded_book_author"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textAppearance="@style/TextAppearance.AppCompat.Small"
		    android:textAlignment="center"
		    android:textColor="@android:color/darker_gray"
	    />

	    <ImageView
			android:id="@+id/book_cover_image"
			android:scaleType="fitCenter"
			android:layout_width="280dp"
			android:layout_height="392dp"
			android:layout_marginTop="8dp"
			android:layout_gravity="center_horizontal"
			android:elevation="8dp"
			android:padding="4dp"
			android:outlineAmbientShadowColor="@android:color/black"
	    />

		<RelativeLayout
			android:id="@+id/chapter_selection_layout"
			android:layout_marginTop="8dp"
			android:layout_gravity="center_horizontal"
			android:layout_width="280dp"
			android:layout_height="wrap_content">

			<ImageButton
				android:id="@+id/chapter_selection_button"
				android:src="@drawable/ic_more_vert"
				android:background="@android:color/transparent"
				android:tint="@android:color/white"
				android:scaleType="center"
				android:contentDescription="Options"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
			/>

			<TextView
				android:id="@+id/chapter_title"
				android:textColor="@android:color/white"
				android:textSize="15dp"
				android:textStyle="normal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@id/chapter_selection_button"
			/>

			<TextView
				android:id="@+id/chapter_section"
				android:textColor="@android:color/darker_gray"
				android:text="Book file - 1"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:layout_below="@id/chapter_title"
				android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@id/chapter_selection_button"
			/>

		</RelativeLayout>

		<SeekBar
			android:id="@+id/chapter_seek_bar"
			android:layout_width="298dp"
			android:layout_height="wrap_content"
			android:layout_below="@id/chapter_section"
			android:layout_alignParentLeft="true"
			android:layout_marginTop="8dp"
			android:layout_gravity="center_horizontal"
		/>

		<RelativeLayout
			android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

			<ImageButton
				android:id="@+id/rewind_button"
				android:src="@drawable/ic_rewind"
				android:background="@android:color/transparent"
				android:contentDescription="Play"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:scaleType="center"
				android:tint="@android:color/white"
				android:layout_marginRight="24dp"
				android:layout_toLeftOf="@id/play_button"
				android:layout_centerVertical="true"
			/>

			<ImageButton
				android:id="@+id/play_button"
				android:src="@drawable/ic_play_circle"
				android:background="@android:color/transparent"
				android:tint="@android:color/white"
				android:tintMode="src_in"
				android:contentDescription="Play"
				android:layout_width="62dp"
				android:layout_height="62dp"
				android:scaleType="fitCenter"
				android:layout_centerVertical="true"
			/>

			<ImageButton
				android:id="@+id/fast_forward_button"
				android:src="@drawable/ic_fast_forward"
				android:background="@android:color/transparent"
				android:contentDescription="Play"
				android:scaleType="center"
				android:tint="@android:color/white"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="24dp"
				android:layout_toRightOf="@id/play_button"
				android:layout_centerVertical="true"
			/>

		</RelativeLayout>

    </LinearLayout>

</RelativeLayout>