<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="@dimen/content_book_item_padding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/book_item_cover"
        android:src="@drawable/ic_no_book"
        android:layout_width="60dp"
        android:layout_height="82dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="description" 
    />

    <TextView
	    android:id="@+id/book_item_title"
	    style="@style/BookItemPrimaryTextView"
	    android:textSize="16dip"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_toRightOf="@id/book_item_cover"
	    android:layout_marginLeft="8dp"
    />

    <TextView
	    android:id="@+id/book_item_author"
	    android:textSize="16dip"
	    android:textColor="@android:color/darker_gray"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_toRightOf="@id/book_item_cover"
	    android:layout_below="@id/book_item_title"
	    android:layout_marginLeft="8dp"
	    android:layout_marginTop="2dp"
    />

    <LinearLayout
	    android:id="@+id/book_item_duration"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_toRightOf="@id/book_item_cover"
	    android:layout_below="@id/book_item_author">

	    <ImageView
		    android:id="@+id/book_item_duration_icon"
		    android:src="@drawable/ic_time"
		    android:layout_width="16dp"
		    android:layout_height="16dp"
		    android:layout_alignParentLeft="true"
		    android:layout_centerHorizontal="true"
		    android:contentDescription="description" 
		    android:layout_marginLeft="8dp"
		    android:layout_marginTop="3dp"
	    />

	    <TextView
		    android:id="@+id/book_item_duration_time"
		    android:textSize="16dip"
		    android:textColor="@android:color/darker_gray"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_toRightOf="@id/book_item_duration_icon"
		    android:layout_centerHorizontal="true"
		    android:layout_marginLeft="4dp"
	    />

    </LinearLayout>

</RelativeLayout>
